{
  "name": "kolaborate-googlemeet-streamdeck",
  "version": "1.0.0",
  "description": "Google Meet controls for Stream Deck",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'",
    "lint": "eslint .",
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/propertyinspector/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@elgato-stream-deck/node": "^5.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@testing-library/jest-dom": "^5.16.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-websocket-mock": "^2.4.1",
    "mock-socket": "^9.2.1",
    "puppeteer": "^21.3.1",
    "supertest": "^6.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}