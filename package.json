{
  "name": "kolaborate-googlemeet-streamdeck",
  "version": "1.0.0",
  "description": "Google Meet controls for Stream Deck",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:extension": "node scripts/build-extension.js",
    "test": "jest",
    "test:extension": "jest tests/extension",
    "test:extension:watch": "jest tests/extension --watch",
    "test:extension:debug": "node --inspect-brk node_modules/.bin/jest --runInBand tests/extension",
    "dev": "webpack --mode=development --watch",
    "dev:extension": "web-ext run --source-dir ./dist/extension --target chromium",
    "lint:extension": "eslint chrome-extension/",
    "pack:extension": "cd dist/extension && zip -r ../kolaborate-meet-extension.zip ./*"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "chrome-extension/**/*.js",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@elgato-stream-deck/node": "^5.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@testing-library/jest-dom": "^5.16.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "puppeteer": "^21.3.1",
    "sinon-chrome": "^3.0.1",
    "web-ext": "^7.8.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}